section.notification.commented
  .grid
    .grid__item.one-third
      h3.section-header
        | Comment created
      .extra__text
        | #{data.notification.email.content.ja.extra_text}


    .grid__item.one-third
      .copy
        h3.section-header-sub
          | English
        p
          span.tag__type Push
          | #{data.notification.push.en.en.notifications.comment_created}
        p
          span.tag__type.tag__type--orange.tag__type--subject Email
          | #{data.en.en.mailers.subject.comment_created}
          span.tag__type.tag__type--title
          | #{data.notification.email.content.en.comment_created.title}
          span.tag__type.tag__type--detail
          | #{data.notification.email.content.en.comment_created.detail}


    .grid__item.one-third
      .copy
        h3.section-header-sub
          | Japanese
        p
          span.tag__type Push
          | #{data.notification.push.ja.ja.notifications.comment_created}
        p
          span.tag__type.tag__type--orange.tag__type--subject Email
          | #{data.ja.ja.mailers.subject.comment_created}
          span.tag__type.tag__type--title
          | #{data.notification.email.content.ja.comment_created.title}
          span.tag__type.tag__type--detail
          | #{data.notification.email.content.ja.comment_created.detail}
